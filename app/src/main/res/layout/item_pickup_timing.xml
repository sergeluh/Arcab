<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/common_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/check_box_common_point"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_back_btn"
        android:padding="8dp"
        android:text="@string/initial_setup_pickup_from"
        android:src="@drawable/arrow_left_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/initial_setup_pickup_address"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toStartOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="80" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_back_btn"
        android:padding="8dp"
        android:src="@drawable/arrow_right_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack">

        <ToggleButton
            android:id="@+id/tog_sunday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="S"
            android:textOff="S"
            android:checked="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintEnd_toStartOf="@+id/tog_monday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_monday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="M"
            android:textOff="M"
            android:checked="false"
            app:layout_constraintEnd_toStartOf="@+id/tog_tuesday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_sunday"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_tuesday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="T"
            android:textOff="T"
            android:checked="false"
            app:layout_constraintEnd_toStartOf="@+id/tog_wednesday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_monday"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_wednesday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="W"
            android:textOff="W"
            android:checked="false"
            app:layout_constraintEnd_toStartOf="@+id/tog_thursday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_tuesday"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_thursday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="T"
            android:textOff="T"
            android:checked="false"
            app:layout_constraintEnd_toStartOf="@+id/tog_friday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_wednesday"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_friday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="F"
            android:textOff="F"
            android:checked="false"
            android:enabled="false"
            app:layout_constraintEnd_toStartOf="@+id/tog_saturday"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_thursday"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tog_saturday"
            style="@style/CustomToggleButtonStyle"
            android:textOn="S"
            android:textOff="S"
            android:checked="false"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tog_friday"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>






</android.support.constraint.ConstraintLayout>
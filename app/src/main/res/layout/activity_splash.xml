<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/transition_container"
    android:transitionName="container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/splash_title"
        android:transitionName="splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/splash_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textSize="30sp"
        android:fontFamily="@font/colfax_medium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/splash_icon"
        android:transitionName="splashIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_logo_white"
        app:layout_constraintTop_toTopOf="@id/splash_title"
        app:layout_constraintBottom_toBottomOf="@id/splash_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="55dp"/>

</android.support.constraint.ConstraintLayout>
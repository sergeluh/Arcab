<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AuthTheme" parent="AppTheme">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MainTheme" parent="AppTheme">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>


    <style name="BaseButton" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginStart">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginTop">@dimen/auth_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/auth_button_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button" parent="BaseButton">
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonOutline" parent="BaseButton">
        <item name="android:background">@drawable/bg_btn_outline</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="EditText">
        <item name="android:layout_marginStart">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginTop">@dimen/auth_edit_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/auth_edit_text_margin</item>
    </style>


    <!--Auth start-->
    <style name="TextAppearanceHeader">
        <item name="android:textSize">@dimen/auth_header_text_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginTop">@dimen/auth_header_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_padding</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="TextAppearanceHeader1" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="TextAppearanceText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginStart">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginTop">@dimen/auth_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/auth_text_margin</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="TextAppearanceHeader2" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:layout_marginStart">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginTop">@dimen/auth_text_margin</item>
        <item name="android:layout_marginEnd">@dimen/auth_screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/auth_text_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

    <style name="TextAppearanceHint">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!--Auth end-->





    <!--styles for Pickup fragment-->
    <style name="TextAppearanceGrayHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/colorGrayText</item>-->
    </style>
    <style name="TextAppearanceGrayText">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/colorGrayText</item>-->
    </style>


    <!--Style for checkbox with letter-->
    <style name="CustomToggleButtonStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_custom_check_box</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/selector_check_box_text_color</item>
    </style>

</resources>
